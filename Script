-- 最終まとめ版 強化ハブ | パス: jsokkzwa | Flyメンテ中
local pass = "jsokkzwa"
local UIS = game:GetService("UserInputService")
local Players = game.Players
local player = Players.LocalPlayer

-- パスワード入力GUI
local sg = Instance.new("ScreenGui", game.CoreGui)
local tb = Instance.new("TextBox", sg)
tb.Size = UDim2.new(0, 300, 0, 60)
tb.Position = UDim2.new(0.5, -150, 0.5, -30)
tb.PlaceholderText = "パスワード入力 (jsokkzwa)"
tb.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
tb.TextColor3 = Color3.new(1, 1, 1)
tb.Font = Enum.Font.GothamBold
tb.TextSize = 24

local auth = false
tb.FocusLost:Connect(function(enter)
    if enter and tb.Text == pass then
        sg:Destroy()
        auth = true
    end
end)

repeat wait() until auth

-- キャラ取得＆強化適用
local function apply(char)
    local hum = char:WaitForChild("Humanoid")
    local root = char:WaitForChild("HumanoidRootPart")
    hum.WalkSpeed = 200
    hum.JumpPower = 150

    -- 無限ジャンプ
    UIS.JumpRequest:Connect(function()
        hum:ChangeState(Enum.HumanoidStateType.Jumping)
    end)

    -- Noclip (Cキー)
    UIS.InputBegan:Connect(function(key)
        if key.KeyCode == Enum.KeyCode.C then
            local enabled = not root:FindFirstChild("NoclipConn")
            if enabled then
                local conn = game.RunService.Stepped:Connect(function()
                    for _, part in pairs(char:GetDescendants()) do
                        if part:IsA("BasePart") then
                            part.CanCollide = false
                        end
                    end
                end)
                conn.Name = "NoclipConn"
                conn.Parent = root
            else
                local conn = root:FindFirstChild("NoclipConn")
                if conn then conn:Disconnect() end
            end
            game.StarterGui:SetCore("SendNotification", {
                Title = "Noclip";
                Text = enabled and "ON" or "OFF";
                Duration = 2
            })
        end

        -- Discordコピー (Fキー)
        if key.KeyCode == Enum.KeyCode.F then
            setclipboard("https://discord.gg/Ax9yJDR6sV")
            game.StarterGui:SetCore("SendNotification", {
                Title = "Discord";
                Text = "招待リンクコピー完了！";
                Duration = 3
            })
        end

        -- Flyメンテナンス中 (Eキー)
        if key.KeyCode == Enum.KeyCode.E then
            game.StarterGui:SetCore("SendNotification", {
                Title = "お知らせ";
                Text = "Flyは現在メンテナンス中です";
                Duration = 3
            })
        end
    end)
end

-- 初回適用
if player.Character then apply(player.Character) end
player.CharacterAdded:Connect(apply)

-- 起動通知
game.StarterGui:SetCore("SendNotification", {
    Title = "強化ハブ起動！";
    Text = "Speed200 + 無限ジャンプ常時ON\nC = Noclip | F = Discordコピー\nFlyはメンテナンス中";
    Duration = 10
})
