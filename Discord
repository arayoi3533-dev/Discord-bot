import discord
from discord.ext import tasks
import datetime
import os

# Koyebの設定画面で入力するトークンを読み込む
TOKEN = os.getenv('DISCORD_TOKEN')
# あなたが投稿したいDiscordのチャンネルID（数字）
CHANNEL_ID = 123456789012345678 

class MyBot(discord.Client):
    def __init__(self):
        intents = discord.Intents.default()
        super().__init__(intents=intents)

    async def setup_hook(self):
        self.daily_announcement.start()

    @tasks.loop(minutes=30) # 30分ごとにチェック
    async def daily_announcement(self):
        now = datetime.datetime.now(datetime.timezone(datetime.timedelta(hours=9)))
        # 毎朝 8:00〜8:30 の間に1回発言する
        if now.hour == 8 and now.minute < 30:
            channel = self.get_channel(CHANNEL_ID)
            if channel:
                today = now.strftime('%m月%d日')
                # 暫定的に日付だけ。後でAPI連携も可能です！
                await channel.send(f"おはようございます！今日は {today} です。")

    @daily_announcement.before_loop
    async def before_announcement(self):
        await self.wait_until_ready()

bot = MyBot()
bot.run(TOKEN)
